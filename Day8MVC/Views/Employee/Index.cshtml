@{
    int i = 1;
}

<h1>Employees</h1>
<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>@emp.FirstName @emp.MiddleName @emp.LastName</td>
            </tr>
            
        }
    </tbody>
</table>
